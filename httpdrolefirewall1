---
# tasks file for httpdrolefirewall/
- name: Install required package
  dnf:
    name: "{{ package }}"
    state: present

- name: Enable & start httpd service
  service:
    name: "{{ service }}"
    enabled: yes
    state: started

- name: Copy file
  copy:
    src: fileh
    dest: /home/rafeeda

- name: Allow HTTP and HTTPS through firewalld
  ansible.posix.firewalld:
    service: http
    permanent: yes
    state: enabled

- name: Allow HTTPS through firewalld
  ansible.posix.firewalld:
    service: https
    permanent: yes
    state: enabled

- name: Reload firewalld
  ansible.builtin.systemd:
    name: firewalld
    state: reloaded

- name: Restart nginx
  ansible.builtin.service:
    name: httpd
    state: restarted

- name: Deploy template settings
  template:
    src: index.html.j2
    dest: "{{ path }}/index.html"
  notify: Restart httpd

- name: Restart service if defined
  service:
    name: "{{ service }}"
    state: restarted
  when: service is defined
