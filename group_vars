- name: hostvars and groupvars
  hosts: server3
  tasks:
  - name: Installing package
    ansible.builtin.apt:
      name: "{{abc}}"
      state: present
  - name: Enabling and starting
    ansible.builtin.service:
      name: "{{abc}}"
      enabled: yes
      state: started
  - name : Copy files
    ansible.builtin.copy:
      src: index.html
      dest: "{{path}}"
